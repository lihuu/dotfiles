{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },
  "base_keymap": "JetBrains",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 20,
  "theme": {
    "mode": "dark",
    "light": "Github Light Tritanopia",
    "dark": "Github Dark Tritanopia"
  },
  "autosave": "on_focus_change",
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "highlight_active_tab": true
  },
  "languages": {
    "TypeScript": {
      "code_actions_on_format": { "source.organizeImports": true }
    },
    "TSX": {
      "code_actions_on_format": { "source.organizeImports": true }
    },
    "JSON": {
      "tab_size": 2
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "args": ["--stdin-filepath", "{file}"]
        }
      },
      "format_on_save": "on"
    },
    "Python": {
      "tab_size": 4,
      "formatter": "language_server",
      "format_on_save": "on"
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "format_on_save": "on",
  "terminal": {
    "shell": {
      "program": "pwsh"
    }
  }
}
